<div class="login">
  <div class="logo-container">
    <%= image_tag "book.svg", class: "book-logo", alt: "logo" %>
  </div>

  <div class="login-form-container">
      <div class="title-container">
        <h3>Heureux de vous revoir !</h3>
        <p>Entrez vos identifiants afin d'acceder Ã  votre compte</p>
      </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Entrez votre email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Entrez votre mot de passe" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Se souvenir de moi" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Se connecter" %>
  </div>
<% end %>
<p class="forgot">
<%= render "devise/shared/links" %>
</p>
  </div>
</div>


<div class="login">
  <div class="logo-container">
    <%= image_tag "book.svg", class: "book-logo", alt: "logo" %>
  </div>

  <div class="login-form-container">
      <div class="title-container">
        <h3>Changer le mot de passe</h3>
        <p>Entrez vos nouveaux mot de passe afin de vous connectez</p>
      </div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characteres minimum)</em>
    <% end %>
  <div class="field">
  
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Nouveau mot de passe" %>
  </div>
    

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmer le nouveau mot de passe" %>
  </div>

  <div class="actions">
    <%= f.submit "Changer le mot de passe" %>
  </div>
<% end %>
<p class="forgot">
<%= render "devise/shared/links" %>
</p>
  </div>
</div>